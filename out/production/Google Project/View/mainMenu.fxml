<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.mainMenuController">
   <children>
      <Pane fx:id="p_first" prefHeight="400.0" prefWidth="600.0" stylesheets="@mainMenu.css">
         <children>
            <TextField fx:id="tf_corpusPath" layoutX="14.0" layoutY="67.0" prefHeight="38.0" prefWidth="383.0" stylesheets="@mainMenu.css" />
            <Button fx:id="browsePostButton" layoutX="404.0" layoutY="149.0" mnemonicParsing="false" onAction="#browsePost" stylesheets="@mainMenu.css" text="Browse">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font></Button>
            <Button fx:id="browseCorpusButton" layoutX="404.0" layoutY="74.0" mnemonicParsing="false" onAction="#browseCorpus" stylesheets="@mainMenu.css" text="Browse">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font></Button>
            <CheckBox fx:id="cb_stem" layoutX="14.0" layoutY="200.0" mnemonicParsing="false" text="Do Stemming">
               <font>
                  <Font size="14.0" />
               </font>
            </CheckBox>
            <TextField fx:id="tf_postingPath" layoutX="14.0" layoutY="142.0" prefHeight="38.0" prefWidth="383.0" stylesheets="@mainMenu.css" />
            <Button layoutX="232.0" layoutY="269.0" mnemonicParsing="false" onAction="#setPane2" prefHeight="59.0" prefWidth="95.0" stylesheets="@mainMenu.css" text="GO!">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font></Button>
            <Label layoutX="14.0" layoutY="50.0" text="Enter your Corpus path below">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font></Label>
            <Label layoutX="14.0" layoutY="125.0" text="Enter your Posting path below">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Pane fx:id="p_second" disable="true" prefHeight="400.0" prefWidth="600.0" stylesheets="@mainMenu.css" visible="false">
         <children>
            <Button fx:id="resetButton" layoutX="36.0" layoutY="167.0" mnemonicParsing="false" prefHeight="67.0" prefWidth="155.0" text="Reset All">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="showButton" layoutX="223.0" layoutY="167.0" mnemonicParsing="false" prefHeight="67.0" prefWidth="155.0" text="Show Dictionary">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="uploadButton" layoutX="406.0" layoutY="167.0" mnemonicParsing="false" prefHeight="67.0" prefWidth="155.0" text="Upload Dictionary">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
